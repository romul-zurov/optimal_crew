unit optimal_crew;

interface

uses
	Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
	Dialogs, Grids, StdCtrls, DB, IBDatabase;

type
	Tform_main = class(TForm)
		grid_crews : TStringGrid;
		Label1 : TLabel;
		Label2 : TLabel;
		edit_zakaz4ik : TEdit;
		edit_adres : TEdit;
		Label3 : TLabel;
		Label5 : TLabel;
		Label4 : TLabel;
		db_main : TIBDatabase;
		procedure FormCreate(Sender : TObject);
	private
		{ Private declarations }
	public
		{ Public declarations }
	end;

var
	form_main : Tform_main;

implementation

{$R *.dfm}

procedure open_database();
begin
	with form_main do
	begin
		with db_main do
		begin
			DatabaseName := 'D:\fbdb\tme.fdb';
			SQLDialect := 1;
			Params.Clear;
			Params.Add('USER "' + 'SYSDBA' + '"');
			Params.Add('PASSWORD "' + 'masterkey' + '"');
		end;
		try
			db_main.Connected := True;
			edit_adres.Text := 'успешное подключение к БД';
		except
			edit_adres.Text := 'ошибка при открытии БД';
		end;
	end;
end;

procedure Tform_main.FormCreate(Sender : TObject);
begin
	with form_main do
	begin
		grid_crews.ColWidths[0] := 120;
		grid_crews.ColWidths[1] := 180;
		grid_crews.ColWidths[2] := 570 - (120 + 180) - 5;
	end;
	open_database();
end;

end.
